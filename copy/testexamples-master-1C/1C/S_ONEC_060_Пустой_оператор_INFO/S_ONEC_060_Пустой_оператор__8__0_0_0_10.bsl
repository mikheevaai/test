            Продолжить;
        КонецЕсли;
        // S_ONEC_052 Устаревший метод «Сообщить» x1
        Сообщить("Итерация: " + Строка(Счетчик));
    КонецЦикла;

    Для Счетчик = 1 По 5 Цикл
        Если Счетчик = 3 Тогда
            Прервать;
        КонецЕсли;
    // S_ONEC_052 Устаревший метод «Сообщить» x1
            Сообщить("Итерация: " + Строка(Счетчик));
    КонецЦикла;
    // S_ONEC_052 Устаревший метод «Сообщить» x1
    Сообщить("Начало процедуры");
    Выйти;
    // S_ONEC_052 Устаревший метод «Сообщить» x1
